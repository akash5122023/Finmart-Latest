<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn" internalLogFile="internal-nlog.txt">

	<!-- Enable ASP.NET Core layout renderers -->
	<extensions>
		<add assembly="Sentry.NLog" />
		<!-- Include your assembly containing the TextBoxTarget class -->
	</extensions>

	<targets>
		<!-- Sentry target (non-blocking). If Sentry server is unreachable, SDK should not block request pipeline. -->
		<target xsi:type="Sentry" name="sentry"
                dsn="http://2ae72040ad1de90745b9f72be614d48e@server.abitcons.com:9000/18"
                layout="${message}" />

		<!-- Rolling hourly file target. Stored under /app/logs in container / working dir on server. -->
		<target xsi:type="File" name="logfile"
                fileName="logs/${shortdate}/${date:format=HH}.log"
                layout="${longdate} ${uppercase:${level}} ${logger} :: ${message} ${exception:format=ToString}"
                archiveEvery="Hour"
                archiveNumbering="Rolling"
                maxArchiveFiles="72"
                keepFileOpen="false"
                concurrentWrites="true" />

		<!-- Console target (useful for 'dotnet run' and container stdout aggregation) -->
		<target xsi:type="Console" name="console" layout="${longdate} ${uppercase:${level}} ${logger} :: ${message} ${exception:format=ToString}" />
	</targets>

	<rules>
		<!-- Capture warnings+ to file, info+ to console, and error+ to Sentry -->
		<logger name="*" minlevel="Info" writeTo="console,logfile" />
		<logger name="*" minlevel="Error" writeTo="sentry" />
	</rules>
</nlog>
