@using AdvanceCRM.Web.Helpers
@model AdvanceCRM.Modules.ThirdParty.IVRDetails.IVRKnowlarityModel


<div class="box-body">

    <div class="table-responsive mailbox-messages">
        @*<a id="downloadLink" onclick="exportF(this)">Export to excel</a>*@
        <table class="table table-hover table-striped" id="table">
            <thead>
                <tr>
                    <td width="15%" style="font-weight:bold">Cutomer Number</td>
                    <td width="15%" style="font-weight:bold">Employee Number</td>
                    <td width="15%" style="font-weight:bold">Duration</td>
                    <td width="15%" style="font-weight:bold">IVR Number</td>
                    <td width="15%" style="font-weight:bold">Date Time</td>
                    <td width="25%" style="font-weight:bold">Recording</td>
                </tr>
            </thead>
            <tbody id="myTable">
                @if (Model.list == null)
                {
                }
                else
                {
                    foreach (var itm in Model.list)
                    {
                        if (itm != null)
                        {
                            <tr>
                                <td width="15%">
                                    <text> @itm.CustomerNumber </text>
                                </td>
                                <td width="15%">
                                    <text> @itm.EmployeeNumber </text>
                                </td>
                                <td width="15%">
                                    <text> @itm.Duration </text>
                                </td>
                                <td width="15%">
                                    <text> @itm.IVRNumber </text>
                                </td>
                                <td width="15%">
                                    <text> @itm.DateTime </text>
                                </td>
                                <td width="25%">
                                    <audio controls>
                                        <source src="@itm.Recording" type="audio/mp3">
                                    </audio>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>


        <!-- /.table -->
    </div>
</div>
<div class="box-footer no-padding">
    <div class="mailbox-controls">
        @if (@Model.list == null)
        {
        }
        else
        {
            <div class="pull-left">
                @Html.PagedListPager(Model.list, page => Url.Action("Index", new { page, Type = Model.Type, StartDate = Model.StartDate.ToString("dd/MM/yyyy"), EndDate = Model.EndDate.ToString("dd/MM/yyyy") }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayPageCountAndCurrentLocation = true, DisplayItemSliceAndTotal = true })
                <!-- /.pull-right -->
            </div>
        }
    </div>
</div>