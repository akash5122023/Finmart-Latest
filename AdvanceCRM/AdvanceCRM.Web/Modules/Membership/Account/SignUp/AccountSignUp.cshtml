            </div>
        </div>
        <div class="signup-form-area">
            <div class="register-box">
                <div class="register-logo">
                    <span class="brand">
                        <span class="brand-mark" role="img" aria-label="BizPlus ERP"></span>
                        <span class="brand-copy">
                            <span class="brand-title">BizPlus ERP</span>
                            <span class="brand-subtitle">Enterprise Suite</span>
                        </span>
                    </span>
                </div>
                <div class="register-box-body">
                    <h3 class="page-title">@Texts.Forms.Membership.SignUp.FormTitle.ToString(Localizer)</h3>
                    <p class="login-box-msg">@trialMessage</p>
                    <div id="SignUpPanel" data-trial-message="@trialMessage" data-trial-visible="@(hasTrialMessage ? "true" : "false")">
                    </div>
                    <div class="signup-footer-links">
                        <a href="~/Account/Login">@Texts.Forms.Membership.SignUp.BackToLogin.ToString(Localizer)</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
$(function() {
    new AdvanceCRM.Membership.SignUpPanel($('#SignUpPanel')).init();
    $('.field.DisplayName,.field.Email,.field.ConfirmEmail,.field.Password,.field.ConfirmPassword').addClass("has-icon");
    $('.field.DisplayName input').after("<span class='glyphicon glyphicon-user form-control-feedback'></span>");
    $('.emaildomain').after("<span class='glyphicon glyphicon-envelope form-control-feedback'></span>");
    $('.field.Password input').after("<span class='glyphicon glyphicon-lock form-control-feedback'></span>");
    $('.field.ConfirmPassword input').after("<span class='glyphicon glyphicon-log-in form-control-feedback'></span>");
    $('.checkbox.icheck input[type="checkbox"]').iCheck({
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'iradio_square-blue',
        increaseArea: '20%'
    });

    // Transform Subdomain field to show suffix
    var subField = $('.field.Subdomain');
    if (subField.length && !subField.data('suffix-applied')) {
        var input = subField.find('input');
        if (input.length) {
            input.attr('maxlength', '30');
            input.attr('placeholder', 'mycompany');
            input.wrap('<div class="subdomain-group" />');
            input.after('<span class="subdomain-suffix">.bizpluserp.com</span>');
            // Remove caption entirely per request
            subField.find('.caption').remove();
            subField.data('suffix-applied', 'true');
        }
    }

    // Enhance MobileNumber with Area Code selector
    var mobileField = $('.field.MobileNumber');
    if (mobileField.length && !mobileField.data('areacode-applied')) {
        var input = mobileField.find('input');
        if (input.length) {
            input.attr('placeholder', '5551234567');
            input.wrap('<div class="phone-group" style="display:flex; align-items:stretch;" />');
            var select = $('<select id="AreaCodeSelect" aria-label="Country/Area Code" style="flex:0 0 120px; border:1px solid #d8deed; border-right:none; border-radius:12px 0 0 12px; background:#eef2f9; padding:0 6px; font-size:13px;">\
                <option value="+1">+1 US</option>\
                <option value="+44">+44 UK</option>\
                <option value="+91" selected>+91 IN</option>\
                <option value="+971">+971 AE</option>\
                <option value="+92">+92 PK</option>\
                <option value="+61">+61 AU</option>\
                <option value="+49">+49 DE</option>\
                <option value="+33">+33 FR</option>\
                <option value="+34">+34 ES</option>\
            </select>');
            input.before(select);
            input.css({borderTopLeftRadius:0, borderBottomLeftRadius:0});
            mobileField.data('areacode-applied','true');
        }
    }
});
</script>


