                        <td align="center">@itmcash.Id.Value</td>
                        <td align="right">0</td>
                        <td align="right">@itmcash.CashIn.Value.ToString("#,##0.00")</td>
                        @{ rtot = rtot - itmcash.CashIn.Value;}
                        <td align="right">@rtot.ToString("#,##0.00")</td>
                    </tr>
                    srno++;
                }

                foreach (var itmcst in Model.Sales.Where(x => x.Date == item))
                {
                    <tr>
                        <td align="center">@srno</td>
                        <td align="center">@itmcst.Date.Value.ToShortDateString()</td>
                        <td align="center">@itmcst.Id.Value</td>
                        <td align="right">@itmcst.GrandTotal.Value.ToString("#,##0.00")</td>
