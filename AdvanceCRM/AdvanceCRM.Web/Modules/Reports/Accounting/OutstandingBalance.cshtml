    <div class="box-body no-padding">
        <table class="table table-striped">
            <tr><th style="text-align:center">Sr. No.</th><th style="text-align:center">Date</th><th style="text-align:center">Receipt No</th><th style="text-align:center">Credit</th><th style="text-align:center">Debit</th><th style="text-align:center">Total</th></tr>

            @{
                double opncash = 0; double opencst = 0;

                opncash = (double)Model.OpeningBal.Sum(x => x.CashIn);
