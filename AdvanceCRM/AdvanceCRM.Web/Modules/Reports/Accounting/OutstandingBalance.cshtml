<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    .report-container {
        width: 100%;
        max-width: 1200px;
        margin: auto;
        background: #ffffff;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .report-title {
        font-size: 22px;
        font-weight: bold;
        /* text-align: center;*/
        color: #333;
        margin-bottom: 15px;
    }

    .report-subtitle {
        /*text-align: center;*/
        font-size: 14px;
        color: #555;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 12px;
        border: 1px solid #ddd;
        /* text-align: center;
        */
    }

    th {
        background: #007bff;
        color: #ffffff;
        font-size: 14px;
        font-weight: bold;
        text-transform: uppercase;
    }

    tr:nth-child(even) {
        background: #e3e3e3;
    }

    tr:hover {
        background: #f1f1f1;
        transition: 0.3s;
    }

    .footer-note {
        text-align: center;
        font-size: 12px;
        margin-top: 15px;
        color: #777;
    }
</style>

<div style="font-size: 16px; font-weight: bold; margin-bottom: 10px;">
    Outstanding Balance
</div>

<div style="font-size: 14px; margin-bottom: 5px;">
    <strong>From:</strong> @Model.Request.DateFrom.ToDateFormat() &nbsp;
    <strong>To:</strong> @Model.Request.DateTo.ToDateFormat()
</div>

<div style="font-size: 16px; font-weight: bold; margin-bottom: 10px;">
    <strong>Name:</strong> @Model.Customer.Name
</div>

@{ List<DateTime> dt = new List<DateTime>();

    foreach (var item in Model.Cash)
    {
        dt.Add((DateTime)item.Date.Value);
    }
    foreach (var item in Model.Sales)
    {
        dt.Add((DateTime)item.Date.Value);
    }

    dt = dt.Distinct().ToList<DateTime>();
    dt.Sort();
}

<div class="box-body no-padding">
    <table class="table table-striped">
        <tr>
            <th style="text-align:center">Sr. No.</th>
            <th style="text-align:center">Date</th>
            <th style="text-align:center">Receipt No</th>
            <th style="text-align:left">Narration</th>
            <th style="text-align:center">Invoice No</th>
            <th style="text-align:center">Credit</th>
            <th style="text-align:center">Debit</th>
            <th style="text-align:center">Total</th>
        </tr>

        @{
            double opncash = 0; double opencst = 0;

            opncash = (double)Model.OpeningBal.Sum(x => x.CashIn);
            opencst = (double)Model.SalesOpeningBal.Sum(x => x.GrandTotal);

            double debtorsopening = 0;
            if (Model.Sales.Count > 0)
            {
                if (Model.Sales.FirstOrDefault().ContactsDebtorsOpening.HasValue)
                {
                    debtorsopening = (double)Model.Sales.FirstOrDefault().ContactsDebtorsOpening;
                }
            }
        }
        <tr>
            <td colspan="7" align="right"><strong> Opening Balance </strong></td>
            @{ double rtot = opencst - opncash + debtorsopening;}
            <td align="right">@rtot.ToString("#,##0.00")</td>
        </tr>
        @{ int srno = 1;}

        @foreach (var item in dt)
        {

            foreach (var itmcash in Model.Cash.Where(x => x.Date == item))
            {
                <tr>
                    <td align="center">@srno</td>
                    <td align="center">@itmcash.Date.Value.ToShortDateString()</td>
                    <td align="center">@itmcash.Id.Value</td>
                    <td align="center">@itmcash.Narration</td>
                    <td align="center">@itmcash.InvoiceNo</td>
                    <td align="right">0</td>
                    <td align="right">@itmcash.CashIn.Value.ToString("#,##0.00")</td>
                    @{ rtot = rtot - itmcash.CashIn.Value;}
                    <td align="right">@rtot.ToString("#,##0.00")</td>
                </tr>
                srno++;
            }

            foreach (var itmcst in Model.Sales.Where(x => x.Date == item))
            {
                <tr>
                    <td align="center">@srno</td>
                    <td align="center">@itmcst.Date.Value.ToShortDateString()</td>
                    <td align="center">@itmcst.Id.Value</td>
                    <td align="left"></td> <!-- Empty Narration for Sales records -->
                    <td align="center">@itmcst.InvoiceNo</td>
                    <td align="right">@itmcst.GrandTotal.Value.ToString("#,##0.00")</td>
                    <td align="right">0</td>
                    @{ rtot = rtot + itmcst.GrandTotal.Value;}
                    <td align="right">@rtot.ToString("#,##0.00")</td>
                </tr>
                srno++;
            }
        }
        <tr>
            <td colspan="7" align="right"><strong> Closing Balance </strong></td>
            <td align="right">@rtot.ToString("#,##0.00")</td>
        </tr>
    </table>
    <hr />
</div>

<div class="footer-note">
    <em>Report generated automatically. Powered by Bizplus CRM.</em>
</div>
