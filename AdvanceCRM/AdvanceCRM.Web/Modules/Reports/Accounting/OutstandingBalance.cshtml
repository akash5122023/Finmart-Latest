                double debtorsopening = 0;
                if (Model.Sales.Count > 0)
                {
                    if (Model.Sales.FirstOrDefault().ContactsDebtorsOpening.HasValue)
                    {
                        debtorsopening = (double)Model.Sales.FirstOrDefault().ContactsDebtorsOpening;
                    }
