@model AdvanceCRM.Reports.EnquiryReportModel

<strong>Mediawise Enquiry </strong>
        &nbsp;&nbsp; - &nbsp;&nbsp; <strong>From:</strong> @Model.Request.DateFrom.ToDateFormat() To: @Model.Request.DateTo.ToDateFormat()
        <hr />
        <table style="width:100%; border:groove" , border="1">
            <tr><th style="text-align:center">Sr. No.</th><th style="text-align:center">Source</th><th style="text-align:center">Count</th></tr>

            @{ int cnt = 1;}

            @foreach (var item in Model.All.Select(x => x.Source).Distinct())
            {
                <tr>
                    <td style="text-align:center; width:20%">
                        @cnt
                    </td>

                    <td style="width:50%">
                        &nbsp;&nbsp;@Html.DisplayFor(x => item)
                    </td>

                    <td style="width:30%; text-align:center">
                        &nbsp;&nbsp;@Model.All.Where(y => y.Source == Html.DisplayFor(x => item).ToString()).Count()
                    </td>
                </tr>
                cnt = cnt + 1;
            }
        </table>