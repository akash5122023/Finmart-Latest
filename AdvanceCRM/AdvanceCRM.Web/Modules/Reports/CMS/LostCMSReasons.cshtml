@model AdvanceCRM.Reports.EnquiryReportModel

<strong>Lost Enquiry Reasons</strong>
        &nbsp;&nbsp; - &nbsp;&nbsp; <strong>From:</strong> @Model.Request.DateFrom.ToDateFormat() To: @Model.Request.DateTo.ToDateFormat()
        <hr />
        <table style="width:100%; border:groove" , border="1">
            <tr><th style="text-align:center">Sr. No.</th><th style="text-align:center">Reason</th><th style="text-align:center">Count</th></tr>

            @{ int cnt = 1;}

            @foreach (var item in Model.Lost.Select(x => x.LostReason).Distinct())
            {
                if (Html.DisplayFor(x => item).ToString().Trim() != "")
                {
                    <tr>
                        <td style="text-align:center; width:20%">
                            @cnt
                        </td>

                        <td style="width:50%">
                            &nbsp;&nbsp;@Html.DisplayFor(x => item)
                        </td>

                        <td style="width:30%; text-align:center">
                            &nbsp;&nbsp;@Model.Lost.Where(y => y.LostReason == Html.DisplayFor(x => item).ToString()).Count()
                        </td>
                    </tr>
                    cnt = cnt + 1;
                }
            }
        </table>